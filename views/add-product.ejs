<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs'); %>
  </head>
  <body>
    <header class="main-header"><%- include("./partials/header.ejs"); %></header>
    <main>
      <div class="form-holder">
        <div class="form-holder-innerContainer">
          <form name="product" action="/admin/add-product" method="POST">
            <input
              class="inp"
              type="text"
              name="title"
              placeholder="name of product"
            />
            <input
              class="inp"
              type="number"
              name="quantity"
              placeholder="quantity"
            />
            <button class="submitBtn" type="submit">Add product</button>
          </form>
        </div>
      </div>
    </main>
  </body>
</html>
