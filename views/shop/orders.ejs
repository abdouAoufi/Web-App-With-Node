<!DOCTYPE html>
<html lang="en">
 <%- include("../includes/head.ejs") %>  
<link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <%- include("../includes/navigation.ejs") %>   
   <main>
      <% const foo = "foo"; %> 
      <% if (orders.length <= 0) { %>
         <p>No order</p>
      <% } else { %>
            <ul>
               <% orders.forEach((order , index) => { %>
                  <li>
                     <h1># <%= index+1 %> <a href="/orders/<%= order._id %>"><button class="btn">Order now </button></a> </h1>
                     <ul>
                        <% order.products.forEach(p => { %>
                           <li><%= p.product.title %> ( <%= p.quantity %> )</li>
                        <% }) %>
                     </ul>
                  </li>
               <% }) %>
            </ul>
            
            <a href="/delete-order"><button class="btn">Cancel orders </button></a>
         <% } %> 
   </main>
</body>
</html>