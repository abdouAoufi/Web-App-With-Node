<!DOCTYPE html>
<html lang="en">
 <%- include("../includes/head.ejs") %>  
<link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <%- include("../includes/navigation.ejs") %>   
   <main>
      <% if (orders.length <= 0) { %>
         <p>No order</p>
      <% } else {%>
            <ul>
               <% orders.forEach(order => { %>
                  <li>
                     <h1># <%= order._id %> </h1>
                     <ul>
                        <% order.products.forEach(p => { %>
                           <li><%= p.product.title %> (<%= p.quantity %> ) - 
                              <a href="/orders/<%= order._id %>"> invoice </a>
                           </li>
                        <% }) %>
                     </ul>
                  </li>
               <% }) %>
            </ul>
            <a href="/delete-order"><button class="btn">Order now </button></a>
         <% } %> 
   </main>
</body>
</html>